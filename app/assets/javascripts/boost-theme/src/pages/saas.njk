                            <td>-</td>
                            <td>
                                <i class="far fa-check-circle fa-lg text-success" aria-hidden="true"></i>
                                <span class="sr-only">Yes</span>
                            </td>
                            <td>
                                <i class="far fa-check-circle fa-lg text-success" aria-hidden="true"></i>
                                <span class="sr-only">Yes</span>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </section>

            <hr class="sep border-primary" role="presentation">

            <!-- Call to action -->
            <div class="container py-5">
                <div class="text-center">
                    <h2 class="mb-4">Are you ready to start?</h2>
                    <div class="mb-4">
                        <a class="btn btn-primary rounded-pill" href="#" role="button">Get started now</a>
                    </div>
                    <a class="link-cta" href="contact.html">Contact us</a>
