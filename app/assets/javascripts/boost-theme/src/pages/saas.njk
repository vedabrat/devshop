                    </div>
                    <div class="col-lg-6">
                        <img src="assets/img/event.jpg" class="img-fluid img-thumbnail" alt="Theme screenshot">
                    </div>
                </div>
            </section>

            <!-- Pricing table -->
            <section class="container py-5">
